<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>



<VBox xmlns:fx="http://javafx.com/fxml"
	fx:controller="frontal.vues.VueParametreTouche"
	styleClass="conteneur"
	id="vue-interieur">	


	<Pane styleClass="petit-espace-vertical"/>


	<Text
		text="%ParametreTouches"
		styleClass="titre-page"
		id="titre">
	</Text>

	<Button
		fx:id="boutonAjouterTouchePerso"	
		text="%ajouterTouche"
		styleClass="gros-bouton"
		id="boutonAjouterTouchePerso">
	</Button>

	<Pane VBox.vgrow="ALWAYS" styleClass="grand-espace-vertical"/>

	<Pane styleClass="grand-espace-vertical"/>

	<HBox styleClass="conteneur,conteneur-parent">

		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal"/>

		<ScrollPane HBox.hgrow="ALWAYS" fitToWidth="true">
			<content>
				<VBox HBox.hgrow="ALWAYS" styleClass="conteneur" fx:id="conteneurRendezVous" id="conteneur-rendez-vous">
				</VBox>
			</content>
		</ScrollPane>

		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal"/>

	</HBox>

	<Pane VBox.vgrow="ALWAYS" styleClass="grand-espace-vertical"/>
	

	<Button 
		fx:id="boutonJeu"
		text="%ouvrirJeu"
		styleClass="gros-bouton"
		id="bouton-ma-page">
	</Button>


	<Button 
		fx:id="boutonMaPage"
		text="%ouvrirPage"
		styleClass="gros-bouton"
		id="boutonMaPage">
	</Button>
</VBox>
